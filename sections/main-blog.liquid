{%- comment -%}
  Blog Section
  Renders blog listing with article cards.
{%- endcomment -%}

<div class="blog-page py-12 md:py-20">
  <div class="container max-w-6xl mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="font-heading text-3xl md:text-5xl font-bold mb-4">
        {{ blog.title }}
      </h1>
      {%- if section.settings.show_description and blog.metafields.custom.description != blank -%}
        <p class="text-lg text-[var(--muted-foreground)] max-w-2xl mx-auto">
          {{ blog.metafields.custom.description }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.settings.show_tags and blog.all_tags.size > 0 -%}
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        <a
          href="{{ blog.url }}"
          class="px-4 py-2 rounded-full text-sm font-medium transition-colors
            {% if current_tags == blank %}bg-[var(--primary)] text-white{% else %}glass hover:bg-[var(--muted)]{% endif %}"
        >
          {{ 'blog.all' | t }}
        </a>
        {%- for tag in blog.all_tags -%}
          <a
            href="{{ blog.url }}/tagged/{{ tag | handle }}"
            class="px-4 py-2 rounded-full text-sm font-medium transition-colors
              {% if current_tags contains tag %}bg-[var(--primary)] text-white{% else %}glass hover:bg-[var(--muted)]{% endif %}"
          >
            {{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- paginate blog.articles by section.settings.articles_per_page -%}
      {%- if blog.articles.size > 0 -%}
        <div class="grid md:grid-cols-2 lg:grid-cols-{{ section.settings.columns }} gap-8">
          {%- for article in blog.articles -%}
            <article class="glass rounded-2xl overflow-hidden group hover:shadow-glass-lg transition-all">
              {%- if article.image -%}
                <a href="{{ article.url }}" class="block aspect-video overflow-hidden">
                  <img
                    src="{{ article.image | image_url: width: 800 }}"
                    alt="{{ article.image.alt | default: article.title }}"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    width="800"
                    height="450"
                    loading="lazy"
                  >
                </a>
              {%- endif -%}

              <div class="p-6">
                {%- if section.settings.show_date or section.settings.show_author -%}
                  <div class="flex items-center gap-3 text-sm text-[var(--muted-foreground)] mb-3">
                    {%- if section.settings.show_date -%}
                      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                        {{ article.published_at | date: format: 'abbreviated_date' }}
                      </time>
                    {%- endif -%}
                    {%- if section.settings.show_date and section.settings.show_author -%}
                      <span>&bull;</span>
                    {%- endif -%}
                    {%- if section.settings.show_author -%}
                      <span>{{ article.author }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <h2 class="font-heading text-xl font-bold mb-3">
                  <a href="{{ article.url }}" class="hover:text-[var(--primary)] transition-colors">
                    {{ article.title }}
                  </a>
                </h2>

                {%- if section.settings.show_excerpt -%}
                  <p class="text-[var(--muted-foreground)] line-clamp-3 mb-4">
                    {{ article.excerpt_or_content | strip_html | truncate: 160 }}
                  </p>
                {%- endif -%}

                <a href="{{ article.url }}" class="inline-flex items-center gap-2 text-[var(--primary)] font-medium hover:gap-3 transition-all">
                  {{ 'blog.read_more' | t }}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          {%- endfor -%}
        </div>

        {%- if paginate.pages > 1 -%}
          <div class="mt-12 flex justify-center">
            {{ paginate | default_pagination }}
          </div>
        {%- endif -%}

      {%- else -%}
        <div class="glass rounded-2xl p-12 text-center max-w-xl mx-auto">
          <div class="w-16 h-16 rounded-full bg-[var(--muted)] flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[var(--muted-foreground)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h2 class="font-heading text-xl font-bold mb-2">{{ 'blog.empty_title' | t }}</h2>
          <p class="text-[var(--muted-foreground)]">{{ 'blog.empty_description' | t }}</p>
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "class": "section-blog",
  "settings": [
    {
      "type": "range",
      "id": "articles_per_page",
      "label": "Articles per page",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 6
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns on desktop",
      "min": 2,
      "max": 3,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show blog description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tag filters",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show article date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show article author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show article excerpt",
      "default": true
    }
  ]
}
{% endschema %}
