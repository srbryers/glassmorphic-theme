{%- comment -%}
  Page Section
  Renders general page content with flexible layout.
{%- endcomment -%}

<div class="page py-12 md:py-20">
  <div class="container max-w-{{ section.settings.content_width }} mx-auto px-4">
    {%- if section.settings.show_title -%}
      <header class="{% if section.settings.center_title %}text-center{% endif %} mb-12">
        <h1 class="font-heading text-3xl md:text-5xl font-bold">
          {{ page.title }}
        </h1>
      </header>
    {%- endif -%}

    {%- if page.content != blank -%}
      <div class="prose prose-lg max-w-none {% if section.settings.center_content %}mx-auto text-center{% endif %}">
        {{ page.content }}
      </div>
    {%- endif -%}

    {% content_for 'blocks' %}
  </div>
</div>

{% stylesheet %}
.prose {
  color: var(--foreground);
}
.prose h2, .prose h3, .prose h4 {
  font-family: var(--font-heading);
  font-weight: 700;
  margin-top: 2em;
  margin-bottom: 0.5em;
}
.prose h2 {
  font-size: 1.75rem;
}
.prose h3 {
  font-size: 1.5rem;
}
.prose p {
  margin-bottom: 1.5em;
}
.prose a {
  color: var(--primary);
  text-decoration: underline;
}
.prose ul, .prose ol {
  margin-bottom: 1.5em;
  padding-left: 1.5em;
}
.prose li {
  margin-bottom: 0.5em;
}
.prose blockquote {
  border-left: 4px solid var(--primary);
  padding-left: 1em;
  margin: 1.5em 0;
  font-style: italic;
  color: var(--muted-foreground);
}
.prose img {
  border-radius: 1rem;
  margin: 2em 0;
}
.prose table {
  width: 100%;
  border-collapse: collapse;
  margin: 2em 0;
}
.prose th, .prose td {
  border: 1px solid var(--border);
  padding: 0.75em 1em;
  text-align: left;
}
.prose th {
  background: var(--muted);
  font-weight: 600;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section-page",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "center_title",
      "label": "Center title",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "center_content",
      "label": "Center content",
      "default": false
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        { "value": "2xl", "label": "Narrow" },
        { "value": "4xl", "label": "Medium" },
        { "value": "6xl", "label": "Wide" }
      ],
      "default": "4xl"
    }
  ]
}
{% endschema %}
