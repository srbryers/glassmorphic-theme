{%- comment -%}
  Product Spotlight Section

  A single product feature section with large image and detailed description.
  Designed for homepage hero-style product showcasing.
{%- endcomment -%}

{%- liquid
  assign product = section.settings.product
  assign bg_color = section.settings.background_color
-%}

{%- comment -%} Wave divider - colored to match this section {%- endcomment -%}
<div class="w-full leading-none" style="margin-top: -60px; margin-bottom: -2px; position: relative; z-index: 10;">
  {% render 'wave-divider', color: bg_color, direction: 'up', animate: true %}
</div>

<section class="relative py-16 md:py-24" style="background-color: {{ bg_color }}; margin-top: -1px;">
  <div class="container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      {%- comment -%} Product Image {%- endcomment -%}
      <div class="relative">
        {%- if product != blank and product.featured_image -%}
          <div class="aspect-square rounded-3xl overflow-hidden shadow-xl bg-white">
            <img
              src="{{ product.featured_image | image_url: width: 800 }}"
              alt="{{ product.featured_image.alt | default: product.title }}"
              width="800"
              height="800"
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>
        {%- else -%}
          {%- comment -%} Placeholder image {%- endcomment -%}
          <div class="aspect-square rounded-3xl bg-[var(--muted)] flex items-center justify-center shadow-xl">
            <svg class="w-32 h-32 text-[var(--muted-foreground)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        {%- endif -%}

        {%- comment -%} Decorative accent {%- endcomment -%}
        <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-[var(--primary)]/10 rounded-full blur-2xl pointer-events-none"></div>
      </div>

      {%- comment -%} Product Details {%- endcomment -%}
      <div class="lg:pl-8">
        {%- if section.settings.eyebrow != blank -%}
          <span class="inline-block text-sm font-medium text-[var(--primary)] uppercase tracking-wider mb-4">
            {{ section.settings.eyebrow }}
          </span>
        {%- endif -%}

        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-[var(--foreground)] mb-6">
          {%- if section.settings.heading != blank -%}
            {{ section.settings.heading }}
          {%- elsif product != blank -%}
            {{ product.title }}
          {%- else -%}
            The Heavyweight Tee
          {%- endif -%}
        </h2>

        <p class="text-lg text-[var(--muted-foreground)] mb-8 leading-relaxed">
          {%- if section.settings.description != blank -%}
            {{ section.settings.description }}
          {%- elsif product != blank -%}
            {{ product.description | strip_html | truncate: 200 }}
          {%- else -%}
            Our signature piece, crafted from premium heavyweight cotton for lasting comfort and durability.
          {%- endif -%}
        </p>

        {%- comment -%} Feature bullets {%- endcomment -%}
        {%- if section.blocks.size > 0 -%}
          <ul class="space-y-4 mb-10">
            {%- for block in section.blocks -%}
              {%- if block.type == 'feature' -%}
                <li class="flex items-start gap-3" {{ block.shopify_attributes }}>
                  <svg class="w-6 h-6 text-[var(--primary)] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="text-[var(--foreground)]">{{ block.settings.text }}</span>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        {%- comment -%} Price and CTA {%- endcomment -%}
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6">
          {%- if product != blank -%}
            <div class="text-2xl font-bold text-[var(--foreground)]">
              {{ product.price | money }}
              {%- if product.compare_at_price > product.price -%}
                <span class="text-lg text-[var(--muted-foreground)] line-through ml-2">
                  {{ product.compare_at_price | money }}
                </span>
              {%- endif -%}
            </div>
          {%- endif -%}

          <a
            href="{%- if product != blank -%}{{ product.url }}{%- else -%}{{ section.settings.button_link }}{%- endif -%}"
            class="btn-primary btn-lg"
          >
            {{ section.settings.button_text | default: 'Shop Now' }}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Spotlight",
  "tag": "section",
  "class": "section-product-spotlight",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Featured Product"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Leave blank to use product title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "info": "Leave blank to use product description"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "info": "Only used if no product selected"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F5F1EB"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature text",
          "default": "Premium quality materials"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Spotlight",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "100% premium cotton"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Relaxed, comfortable fit"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Pre-shrunk fabric"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Made responsibly"
          }
        }
      ]
    }
  ]
}
{% endschema %}
