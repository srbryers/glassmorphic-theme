{%- comment -%}
  Value Props Section

  A grid of value propositions with icons, headings, and descriptions.
  Perfect for highlighting brand benefits and trust signals.
{%- endcomment -%}

{%- liquid
  assign bg_color = section.settings.background_color
-%}

{%- comment -%} Wave divider - colored to match this section {%- endcomment -%}
<div class="w-full leading-none" style="margin-top: -60px; margin-bottom: -2px; position: relative; z-index: 10;">
  {% render 'wave-divider', color: bg_color, direction: 'up', animate: true %}
</div>

<section class="relative py-16 md:py-20" style="background-color: {{ bg_color }}; margin-top: -1px;">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-[var(--foreground)] text-center mb-12">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {%- for block in section.blocks -%}
        {%- if block.type == 'value_prop' -%}
          <div class="text-center p-6 rounded-2xl bg-white/50 backdrop-blur-sm border border-white/20 hover-lift" {{ block.shopify_attributes }}>
            {%- comment -%} Icon {%- endcomment -%}
            <div class="w-14 h-14 mx-auto mb-4 rounded-xl bg-[var(--primary)]/10 flex items-center justify-center">
              {%- case block.settings.icon -%}
                {%- when 'quality' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                  </svg>
                {%- when 'shipping' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                  </svg>
                {%- when 'returns' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                {%- when 'sustainable' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                {%- when 'heart' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                  </svg>
                {%- when 'star' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                  </svg>
                {%- when 'clock' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                {%- when 'shield' -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                {%- else -%}
                  <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
              {%- endcase -%}
            </div>

            {%- comment -%} Content {%- endcomment -%}
            <h3 class="font-bold text-[var(--foreground)] mb-2">
              {{ block.settings.heading }}
            </h3>
            <p class="text-sm text-[var(--muted-foreground)] leading-relaxed">
              {{ block.settings.description }}
            </p>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Value Props",
  "tag": "section",
  "class": "section-value-props",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Optional section heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "value_prop",
      "name": "Value Prop",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Quality badge" },
            { "value": "shipping", "label": "Shipping box" },
            { "value": "returns", "label": "Returns arrows" },
            { "value": "sustainable", "label": "Sustainable globe" },
            { "value": "heart", "label": "Heart" },
            { "value": "star", "label": "Star" },
            { "value": "clock", "label": "Clock" },
            { "value": "shield", "label": "Shield" },
            { "value": "check", "label": "Checkmark" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Heavyweight fabrics that last"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Value Props",
      "blocks": [
        {
          "type": "value_prop",
          "settings": {
            "icon": "quality",
            "heading": "Premium Quality",
            "description": "Heavyweight fabrics that last wash after wash"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "shipping",
            "heading": "Free Shipping",
            "description": "On all orders over $75"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "returns",
            "heading": "Easy Returns",
            "description": "30-day hassle-free returns"
          }
        },
        {
          "type": "value_prop",
          "settings": {
            "icon": "sustainable",
            "heading": "Made Responsibly",
            "description": "Ethically sourced materials"
          }
        }
      ]
    }
  ]
}
{% endschema %}
