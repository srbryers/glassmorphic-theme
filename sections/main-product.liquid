{%- comment -%}
  Main Product Section

  Full product page with gallery, form, and details.
  Features glass card styling and enhanced micro-interactions.
  Uses image-gallery and product-form islands.
{%- endcomment -%}

<section class="section py-8 md:py-12">
  <div class="container">
    {%- comment -%} Breadcrumbs {%- endcomment -%}
    <nav class="text-sm text-[var(--muted-foreground)] mb-6" aria-label="Breadcrumb">
      <ol class="flex items-baseline gap-2 flex-wrap">
        <li class="inline-flex items-baseline">
          <a href="{{ routes.root_url }}" class="hover:text-[var(--primary)] transition-colors">
            {{ 'general.home' | t }}
          </a>
        </li>
        <li class="inline-flex items-baseline text-[var(--border)]">/</li>
        {%- if product.collections.size > 0 -%}
          <li class="inline-flex items-baseline">
            <a href="{{ product.collections.first.url }}" class="hover:text-[var(--primary)] transition-colors">
              {{ product.collections.first.title }}
            </a>
          </li>
          <li class="inline-flex items-baseline text-[var(--border)]">/</li>
        {%- endif -%}
        <li class="inline-flex items-baseline text-[var(--foreground)] font-medium truncate max-w-[200px]">{{ product.title }}</li>
      </ol>
    </nav>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      {%- comment -%} Product Gallery {%- endcomment -%}
      <div>
        {% render 'image-gallery', images: product.images, featured: product.featured_image %}
      </div>

      {%- comment -%} Product Info with glass card {%- endcomment -%}
      <div class="lg:sticky lg:top-24 lg:self-start">
        <div class="bg-[var(--card)] border border-[var(--border)] rounded-2xl p-6 md:p-8 shadow-sm card-accent-top">
          {%- comment -%} Vendor badge {%- endcomment -%}
          {%- if product.vendor -%}
            <span class="badge badge-vendor uppercase tracking-wider mb-3">
              {{ product.vendor }}
            </span>
          {%- endif -%}

          {%- comment -%} Title {%- endcomment -%}
          <h1 class="font-heading text-3xl md:text-4xl text-[var(--foreground)] mb-4">
            {{ product.title }}
          </h1>

          {%- comment -%} Reviews placeholder {%- endcomment -%}
          <div class="flex items-center gap-3 mb-6 pb-6 border-b border-[var(--border)]">
            <div class="flex items-center gap-0.5">
              {%- for i in (1..5) -%}
                <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {%- endfor -%}
            </div>
            <span class="text-sm text-[var(--muted-foreground)]">0 {{ 'products.reviews' | t | default: 'reviews' }}</span>
          </div>

          {%- comment -%} Size Guide (metaobject) {%- endcomment -%}
          {%- assign size_guide_enabled = false -%}
          {%- assign guide_title = blank -%}
          {%- assign column_headers = blank -%}
          {%- assign size_guide_rows = blank -%}

          {%- for block in section.blocks -%}
            {%- if block.type == 'size-guide' -%}
              {%- liquid
                assign size_guide_metaobject = product.metafields.custom.size_guide.value

                if size_guide_metaobject != blank
                  assign guide_title = block.settings.title | default: size_guide_metaobject.title
                  assign column_headers = size_guide_metaobject.column_headers
                  assign size_guide_rows = size_guide_metaobject.rows.value
                  if column_headers != blank and size_guide_rows.size > 0
                    assign size_guide_enabled = true
                  endif
                endif
              -%}

              {%- if size_guide_enabled -%}
                <div data-size-guide-enabled style="display: none;" {{ block.shopify_attributes }}></div>
                {% render 'size-guide-modal',
                  title: guide_title,
                  column_headers: column_headers,
                  rows: size_guide_rows
                %}
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}

          {%- comment -%} Product Form {%- endcomment -%}
          {% render 'product-form',
            product: product,
            show_stock_level: section.settings.show_stock_level,
            stock_display_style: section.settings.stock_display_style,
            low_stock_threshold: section.settings.low_stock_threshold,
            size_guide_enabled: size_guide_enabled
          %}
        </div>

        {%- comment -%} Description Accordion with card variant styling {%- endcomment -%}
        {%- if product.description != blank or section.blocks.size > 0 -%}
          <div class="mt-6 space-y-3">
            <div
              data-island="accordion"
              data-hydrate="visible"
            >
              <accordion-island class="block space-y-3" data-allow-multiple>
                {%- if product.description != blank -%}
                  <div
                    data-accordion-item
                    data-open
                    class="bg-[var(--card)] border border-[var(--border)] rounded-2xl shadow-sm hover:shadow-md transition-all duration-300"
                  >
                    <button
                      data-accordion-trigger
                      type="button"
                      class="flex items-center justify-between w-full px-5 py-4 text-left text-[var(--foreground)] font-medium group"
                      aria-expanded="true"
                    >
                      <span class="font-heading text-lg uppercase tracking-wide group-hover:text-[var(--primary)] transition-colors">{{ 'products.description' | t }}</span>
                      <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-[var(--muted)] group-hover:bg-[var(--primary)]/10 transition-all duration-300">
                        <svg data-accordion-icon class="w-4 h-4 text-[var(--muted-foreground)] group-hover:text-[var(--primary)] transition-all duration-300 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                      </div>
                    </button>
                    <div data-accordion-content class="overflow-hidden transition-all duration-300 ease-out" aria-hidden="false">
                      <div class="px-5 pb-5 text-[var(--muted-foreground)] prose prose-sm leading-relaxed">
                        {{ product.description }}
                      </div>
                    </div>
                  </div>
                {%- endif -%}

                {%- for block in section.blocks -%}
                  {%- case block.type -%}
                    {%- when 'accordion' -%}
                      <div
                        data-accordion-item
                        class="bg-[var(--card)] border border-[var(--border)] rounded-2xl shadow-sm hover:shadow-md transition-all duration-300"
                        {{ block.shopify_attributes }}
                      >
                        <button
                          data-accordion-trigger
                          type="button"
                          class="flex items-center justify-between w-full px-5 py-4 text-left text-[var(--foreground)] font-medium group"
                          aria-expanded="false"
                        >
                          <span class="font-heading text-lg uppercase tracking-wide group-hover:text-[var(--primary)] transition-colors">{{ block.settings.title }}</span>
                          <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-[var(--muted)] group-hover:bg-[var(--primary)]/10 transition-all duration-300">
                            <svg data-accordion-icon class="w-4 h-4 text-[var(--muted-foreground)] group-hover:text-[var(--primary)] transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                          </div>
                        </button>
                        <div data-accordion-content class="overflow-hidden transition-all duration-300 ease-out" style="max-height: 0;" aria-hidden="true">
                          <div class="px-5 pb-5 text-[var(--muted-foreground)] leading-relaxed">
                            {{ block.settings.content }}
                          </div>
                        </div>
                      </div>
                  {%- endcase -%}
                {%- endfor -%}
              </accordion-island>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section-main-product",
  "settings": [
    {
      "type": "header",
      "content": "Inventory"
    },
    {
      "type": "checkbox",
      "id": "show_stock_level",
      "label": "Show stock level",
      "default": false
    },
    {
      "type": "select",
      "id": "stock_display_style",
      "label": "Display style",
      "options": [
        { "value": "count", "label": "Always show count" },
        { "value": "low_only", "label": "Only show when low stock" }
      ],
      "default": "count",
      "visible_if": "{{ section.settings.show_stock_level }}"
    },
    {
      "type": "number",
      "id": "low_stock_threshold",
      "label": "Low stock threshold",
      "default": 5,
      "info": "Show warning when stock falls to or below this number",
      "visible_if": "{{ section.settings.show_stock_level }}"
    }
  ],
  "blocks": [
    {
      "type": "size-guide",
      "name": "Size Guide",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "Displays size guide from the product's custom.size_guide metafield."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title override",
          "info": "Optional. Overrides the metaobject title if set."
        }
      ]
    },
    {
      "type": "accordion",
      "name": "Accordion item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Shipping & Returns"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Free shipping on orders over $50. Returns accepted within 30 days.</p>"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "accordion",
        "settings": {
          "title": "Shipping & Returns",
          "content": "<p>Free shipping on orders over $50. Returns accepted within 30 days of purchase.</p>"
        }
      },
      {
        "type": "accordion",
        "settings": {
          "title": "Care Instructions",
          "content": "<p>Machine wash cold with like colors. Tumble dry low. Do not bleach.</p>"
        }
      }
    ]
  }
}
{% endschema %}
