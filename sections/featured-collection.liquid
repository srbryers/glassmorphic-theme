{%- comment -%}
  Featured Collection Section

  Displays products from a selected collection in a bento-style grid layout.
  First product is featured at 2×2 size for visual hierarchy.
{%- endcomment -%}

{%- liquid
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 5
  assign enable_bento = section.settings.enable_bento | default: true
-%}

<section class="section py-12 md:py-20">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="flex items-center justify-between mb-8 md:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-[var(--foreground)]">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.show_view_all and collection != blank -%}
          <a
            href="{{ collection.url }}"
            class="hidden sm:flex items-center gap-2 text-sm font-medium text-[var(--primary)] hover:text-[var(--primary-hover)] transition-colors"
          >
            {{ 'general.view_all' | t }}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if collection != blank -%}
      {%- if enable_bento -%}
        {%- comment -%} Bento Grid Layout {%- endcomment -%}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 auto-rows-fr">
          {%- for product in collection.products limit: products_to_show -%}
            {%- if forloop.first -%}
              {%- comment -%} Featured product - spans 2×2 on desktop {%- endcomment -%}
              <div class="col-span-2 row-span-2">
                {% render 'product-card',
                  product: product,
                  show_quick_add: section.settings.show_quick_add,
                  show_quick_view: true,
                  image_ratio: '1/1'
                %}
              </div>
            {%- else -%}
              {%- comment -%} Standard products {%- endcomment -%}
              <div class="col-span-1">
                {% render 'product-card',
                  product: product,
                  show_quick_add: section.settings.show_quick_add,
                  show_quick_view: true,
                  image_ratio: '3/4'
                %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- else -%}
        {%- comment -%} Standard Grid Layout {%- endcomment -%}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
          {%- for product in collection.products limit: products_to_show -%}
            {% render 'product-card', product: product, show_quick_add: section.settings.show_quick_add %}
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_view_all -%}
        {%- comment -%} Mobile-only view all link {%- endcomment -%}
        <div class="flex sm:hidden justify-center mt-8">
          <a
            href="{{ collection.url }}"
            class="btn-outline"
          >
            {{ 'general.view_all' | t }}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      {%- comment -%} Placeholder products when no collection selected {%- endcomment -%}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 auto-rows-fr">
        {%- for i in (1..products_to_show) -%}
          {%- if forloop.first and enable_bento -%}
            {%- comment -%} Featured placeholder {%- endcomment -%}
            <article class="product-card group hover-lift col-span-2 row-span-2 rounded-2xl">
              <div class="aspect-square bg-[var(--muted)] rounded-2xl mb-3 flex items-center justify-center shadow-sm">
                <svg class="w-24 h-24 text-[var(--muted-foreground)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="space-y-2">
                <div class="h-5 bg-[var(--muted)] rounded w-3/4"></div>
                <div class="h-5 bg-[var(--muted)] rounded w-1/4"></div>
              </div>
            </article>
          {%- else -%}
            {%- comment -%} Standard placeholder {%- endcomment -%}
            <article class="product-card group hover-lift rounded-2xl">
              <div class="aspect-[3/4] bg-[var(--muted)] rounded-2xl mb-3 flex items-center justify-center shadow-sm">
                <svg class="w-16 h-16 text-[var(--muted-foreground)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="space-y-2">
                <div class="h-4 bg-[var(--muted)] rounded w-3/4"></div>
                <div class="h-4 bg-[var(--muted)] rounded w-1/4"></div>
              </div>
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <p class="text-center text-[var(--muted-foreground)] mt-8">
        {{ 'sections.featured_collection.select_collection' | t }}
      </p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "tag": "section",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.featured_collection.settings.heading.label",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured_collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 5,
      "label": "t:sections.featured_collection.settings.products_to_show.label"
    },
    {
      "type": "checkbox",
      "id": "enable_bento",
      "label": "t:sections.featured_collection.settings.enable_bento.label",
      "info": "t:sections.featured_collection.settings.enable_bento.info",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "t:sections.featured_collection.settings.show_quick_add.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "t:sections.featured_collection.settings.show_view_all.label",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.presets.name"
    }
  ]
}
{% endschema %}
