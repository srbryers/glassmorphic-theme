{%- comment -%}
  Footer Section

  Site footer with navigation, newsletter, and social links.
  Features glass effects, wave top edge, and lighthouse illustration.
{%- endcomment -%}

{%- comment -%} Wavy top edge - extends above footer {%- endcomment -%}
<div class="w-full leading-none" style="margin-top: -60px; margin-bottom: -2px;">
  <svg
    class="block w-full"
    style="height: 62px;"
    viewBox="0 0 1440 120"
    preserveAspectRatio="none"
    fill="var(--navy)"
  >
    <path d="M0,0 C360,80 720,-20 1080,40 C1260,70 1380,60 1440,40 L1440,120 L0,120 Z"/>
  </svg>
</div>

<footer class="relative bg-[var(--navy)] text-white overflow-hidden" style="margin-top: -1px;">
  {%- comment -%} Decorative gradient orbs {%- endcomment -%}
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/5 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-[var(--primary)]/10 rounded-full blur-3xl pointer-events-none"></div>

  {%- comment -%} Top glass border accent {%- endcomment -%}
  <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>

  <div class="relative container py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      {%- comment -%} Brand & Description {%- endcomment -%}
      <div class="lg:col-span-1">
        {%- comment -%} Logo {%- endcomment -%}
        <a href="{{ routes.root_url }}" class="inline-block mb-4 hover:opacity-80 transition-opacity">
          {%- if section.settings.logo -%}
            {%- assign logo_width_2x = section.settings.logo_width | times: 2 -%}
            <img
              src="{{ section.settings.logo | image_url: width: logo_width_2x }}"
              alt="{{ shop.name }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio }}"
              class="h-auto"
              style="width: {{ section.settings.logo_width }}px;"
              loading="lazy"
            >
          {%- else -%}
            {%- comment -%} Default: Beacons Logo Patch White {%- endcomment -%}
            <img
              src="{{ 'Beacons Logo - Patch - White.png' | asset_url }}"
              alt="{{ shop.name }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width }}"
              class="h-auto"
              style="width: {{ section.settings.logo_width }}px;"
              loading="lazy"
            >
          {%- endif -%}
        </a>

        {%- if section.settings.show_store_name -%}
          <a href="{{ routes.root_url }}" class="inline-block font-heading text-2xl uppercase tracking-wide mb-4 hover:opacity-80 transition-opacity">
            {{ shop.name }}
          </a>
        {%- endif -%}
        <p class="text-white/70 text-sm mb-6 leading-relaxed">
          {{ section.settings.description | default: 'Quality basics for everyday.' }}
        </p>

        {%- comment -%} Social Links with glass hover effect {%- endcomment -%}
        <div class="flex items-center gap-3">
          {%- if settings.social_instagram_link != blank -%}
            <a
              href="{{ settings.social_instagram_link }}"
              class="w-10 h-10 flex items-center justify-center rounded-xl bg-white/5 text-white/70 hover:bg-white/15 hover:text-white hover:scale-110 transition-all duration-300"
              aria-label="{{ 'social.instagram' | t }}"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_twitter_link != blank -%}
            <a
              href="{{ settings.social_twitter_link }}"
              class="w-10 h-10 flex items-center justify-center rounded-xl bg-white/5 text-white/70 hover:bg-white/15 hover:text-white hover:scale-110 transition-all duration-300"
              aria-label="{{ 'social.twitter' | t }}"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_facebook_link != blank -%}
            <a
              href="{{ settings.social_facebook_link }}"
              class="w-10 h-10 flex items-center justify-center rounded-xl bg-white/5 text-white/70 hover:bg-white/15 hover:text-white hover:scale-110 transition-all duration-300"
              aria-label="{{ 'social.facebook' | t }}"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Navigation Columns {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu' -%}
            <div class="lg:col-span-1" {{ block.shopify_attributes }}>
              <h3 class="font-bold text-sm uppercase tracking-wider mb-5 text-white/90">
                {{ block.settings.title }}
              </h3>
              <ul class="space-y-3">
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a
                      href="{{ link.url }}"
                      class="inline-flex items-center text-white/60 hover:text-white text-sm transition-all duration-300 hover:translate-x-1"
                    >
                      {{ link.title }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Newsletter with glass card {%- endcomment -%}
      {%- if section.settings.show_newsletter -%}
        <div class="lg:col-span-1">
          <div class="p-5 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm">
            <h3 class="font-bold text-sm uppercase tracking-wider mb-3 text-white/90">
              {{ section.settings.newsletter_title | default: 'Stay Updated' }}
            </h3>
            <p class="text-white/60 text-sm mb-4 leading-relaxed">
              {{ section.settings.newsletter_description | default: 'Subscribe to our newsletter for updates and exclusive offers.' }}
            </p>
            {%- form 'customer', class: 'space-y-3' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="relative">
                <input
                  type="email"
                  name="contact[email]"
                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white placeholder:text-white/40 focus:outline-none focus:border-white/40 focus:bg-white/15 focus:shadow-[0_0_0_3px_rgba(255,255,255,0.1)] transition-all duration-300"
                  placeholder="{{ 'newsletter.email_placeholder' | t }}"
                  required
                  autocomplete="email"
                >
              </div>
              <button type="submit" class="w-full btn-primary justify-center">
                {{ 'newsletter.subscribe' | t }}
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
            {%- endform -%}
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Bottom Bar with glass separator {%- endcomment -%}
    <div class="relative mt-12 pt-8">
      <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-white/15 to-transparent"></div>
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-white/40 text-sm">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.copyright' | t }}
        </p>
        <div class="flex items-center gap-6">
          {%- for link in section.settings.legal_menu.links -%}
            <a
              href="{{ link.url }}"
              class="text-white/40 hover:text-white/70 text-sm transition-all duration-300"
            >
              {{ link.title }}
            </a>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 50,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_store_name",
      "label": "Show store name",
      "default": false,
      "info": "Display store name below logo (or alone if no logo)"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Quality basics for everyday."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter description",
      "default": "Subscribe to our newsletter for updates and exclusive offers."
    },
    {
      "type": "header",
      "content": "Legal"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal menu"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu",
        "settings": {
          "title": "Shop",
          "menu": "main-menu"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Support",
          "menu": "footer"
        }
      }
    ]
  }
}
{% endschema %}
