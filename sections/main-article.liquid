{%- comment -%}
  Article Section
  Renders individual article with content and comments.
{%- endcomment -%}

<article class="article-page py-12 md:py-20">
  <div class="container max-w-4xl mx-auto px-4">
    <header class="text-center mb-12">
      <a href="{{ blog.url }}" class="inline-flex items-center gap-2 text-[var(--muted-foreground)] hover:text-[var(--foreground)] mb-6">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        {{ 'article.back_to_blog' | t: blog: blog.title }}
      </a>

      <h1 class="font-heading text-3xl md:text-5xl font-bold mb-6">
        {{ article.title }}
      </h1>

      <div class="flex flex-wrap items-center justify-center gap-4 text-[var(--muted-foreground)]">
        {%- if section.settings.show_date -%}
          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            {{ article.published_at | date: format: 'abbreviated_date' }}
          </time>
        {%- endif -%}

        {%- if section.settings.show_author -%}
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            {{ article.author }}
          </span>
        {%- endif -%}

        {%- if article.comments_count > 0 and blog.comments_enabled? -%}
          <a href="#comments" class="flex items-center gap-2 hover:text-[var(--foreground)]">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            {{ article.comments_count }} {{ 'article.comments' | t }}
          </a>
        {%- endif -%}
      </div>
    </header>

    {%- if article.image and section.settings.show_featured_image -%}
      <div class="mb-12 rounded-2xl overflow-hidden shadow-glass-lg">
        <img
          src="{{ article.image | image_url: width: 1200 }}"
          alt="{{ article.image.alt | default: article.title }}"
          class="w-full h-auto"
          width="1200"
          height="{{ 1200 | divided_by: article.image.aspect_ratio }}"
          loading="eager"
        >
      </div>
    {%- endif -%}

    <div class="prose prose-lg max-w-none mb-12">
      {{ article.content }}
    </div>

    {%- if section.settings.show_tags and article.tags.size > 0 -%}
      <div class="flex flex-wrap items-center gap-2 mb-12 pb-12 border-b border-[var(--border)]">
        <span class="text-sm font-medium text-[var(--muted-foreground)]">{{ 'article.tags' | t }}:</span>
        {%- for tag in article.tags -%}
          <a
            href="{{ blog.url }}/tagged/{{ tag | handle }}"
            class="px-3 py-1 text-sm glass rounded-full hover:bg-[var(--muted)] transition-colors"
          >
            {{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_share_buttons -%}
      {%- assign share_url = request.origin | append: article.url -%}
      <div class="flex items-center gap-4 mb-12 pb-12 border-b border-[var(--border)]">
        <span class="text-sm font-medium">{{ 'article.share' | t }}:</span>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{ share_url | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-icon"
          aria-label="Share on Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
          </svg>
        </a>
        <a
          href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ share_url | url_encode }}"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-icon"
          aria-label="Share on Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.44 4.83c-.8.37-1.5.38-2.22.02.93-.56.98-.96 1.32-2.02-.88.52-1.86.9-2.9 1.1-.82-.88-2-1.43-3.3-1.43-2.5 0-4.55 2.04-4.55 4.54 0 .36.03.7.1 1.04-3.77-.2-7.12-2-9.36-4.75-.4.67-.6 1.45-.6 2.3 0 1.56.8 2.95 2 3.77-.74-.03-1.44-.23-2.05-.57v.06c0 2.2 1.56 4.03 3.64 4.44-.67.2-1.37.2-2.06.08.58 1.8 2.26 3.12 4.25 3.16C5.78 18.1 3.37 18.74 1 18.46c2 1.3 4.4 2.04 6.97 2.04 8.35 0 12.92-6.92 12.92-12.93 0-.2 0-.4-.02-.6.9-.63 1.96-1.22 2.56-2.14z"/>
          </svg>
        </a>
        <a
          href="mailto:?subject={{ article.title | url_encode }}&body={{ share_url | url_encode }}"
          class="btn-icon"
          aria-label="Share via Email"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </a>
      </div>
    {%- endif -%}

    {%- if blog.comments_enabled? -%}
      <div id="comments" class="glass rounded-2xl p-8">
        <h2 class="font-heading text-2xl font-bold mb-8">
          {{ 'article.comments_title' | t }} ({{ article.comments_count }})
        </h2>

        {%- if article.comments.size > 0 -%}
          <div class="space-y-6 mb-8">
            {%- paginate article.comments by 10 -%}
              {%- for comment in article.comments -%}
                <div class="flex gap-4 pb-6 {% unless forloop.last %}border-b border-[var(--border)]{% endunless %}">
                  <div class="w-10 h-10 rounded-full bg-[var(--primary)] flex items-center justify-center text-white font-bold flex-shrink-0">
                    {{ comment.author | slice: 0 | upcase }}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="font-medium">{{ comment.author }}</span>
                      <span class="text-sm text-[var(--muted-foreground)]">
                        {{ comment.created_at | date: format: 'abbreviated_date' }}
                      </span>
                    </div>
                    <div class="text-[var(--muted-foreground)]">
                      {{ comment.content }}
                    </div>
                  </div>
                </div>
              {%- endfor -%}

              {%- if paginate.pages > 1 -%}
                <div class="pt-6">
                  {{ paginate | default_pagination }}
                </div>
              {%- endif -%}
            {%- endpaginate -%}
          </div>
        {%- endif -%}

        <div class="pt-8 border-t border-[var(--border)]">
          <h3 class="font-heading text-xl font-bold mb-6">{{ 'article.leave_comment' | t }}</h3>

          {%- form 'new_comment', article, class: 'space-y-6' -%}
            {{ form.errors | default_errors }}

            <div class="grid md:grid-cols-2 gap-4">
              <div class="space-y-2">
                <label for="comment-author" class="block text-sm font-medium">
                  {{ 'article.comment_name' | t }}
                </label>
                <input
                  type="text"
                  id="comment-author"
                  name="comment[author]"
                  required
                  class="input w-full"
                >
              </div>
              <div class="space-y-2">
                <label for="comment-email" class="block text-sm font-medium">
                  {{ 'article.comment_email' | t }}
                </label>
                <input
                  type="email"
                  id="comment-email"
                  name="comment[email]"
                  required
                  class="input w-full"
                >
              </div>
            </div>

            <div class="space-y-2">
              <label for="comment-body" class="block text-sm font-medium">
                {{ 'article.comment_body' | t }}
              </label>
              <textarea
                id="comment-body"
                name="comment[body]"
                rows="5"
                required
                class="input w-full resize-y"
              ></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
              {{ 'article.comment_submit' | t }}
            </button>
          {%- endform -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</article>

{% stylesheet %}
.prose {
  color: var(--foreground);
}
.prose h2, .prose h3, .prose h4 {
  font-family: var(--font-heading);
  font-weight: 700;
  margin-top: 2em;
  margin-bottom: 0.5em;
}
.prose p {
  margin-bottom: 1.5em;
}
.prose a {
  color: var(--primary);
  text-decoration: underline;
}
.prose ul, .prose ol {
  margin-bottom: 1.5em;
  padding-left: 1.5em;
}
.prose li {
  margin-bottom: 0.5em;
}
.prose blockquote {
  border-left: 4px solid var(--primary);
  padding-left: 1em;
  margin: 1.5em 0;
  font-style: italic;
  color: var(--muted-foreground);
}
.prose img {
  border-radius: 1rem;
  margin: 2em 0;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Article",
  "tag": "section",
  "class": "section-article",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show featured image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show publish date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show share buttons",
      "default": true
    }
  ]
}
{% endschema %}
