{%- comment -%}
  Customer Reset Password Section
  Renders password recovery form.
{%- endcomment -%}

<div class="customer-reset-password py-12 md:py-20">
  <div class="container max-w-md mx-auto px-4">
    <div class="glass rounded-2xl p-8 md:p-10 shadow-glass-lg">
      <div class="text-center mb-8">
        <h1 class="font-heading text-3xl md:text-4xl font-bold mb-2">
          {{ 'customer.reset_password.title' | t }}
        </h1>
        <p class="text-[var(--muted-foreground)]">
          {{ 'customer.reset_password.subtitle' | t }}
        </p>
      </div>

      {%- form 'recover_customer_password', class: 'space-y-6' -%}
        {%- if form.posted_successfully? -%}
          <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
            <p class="text-green-800 dark:text-green-400 text-sm">
              {{ 'customer.reset_password.success' | t }}
            </p>
          </div>
        {%- else -%}
          {{ form.errors | default_errors }}

          <div class="space-y-2">
            <label for="recover-email" class="block text-sm font-medium">
              {{ 'customer.reset_password.email' | t }}
            </label>
            <input
              type="email"
              id="recover-email"
              name="email"
              autocomplete="email"
              autocapitalize="off"
              required
              class="input w-full"
              placeholder="{{ 'customer.reset_password.email_placeholder' | t }}"
            >
          </div>

          <button type="submit" class="btn btn-primary w-full">
            {{ 'customer.reset_password.submit' | t }}
          </button>
        {%- endif -%}
      {%- endform -%}

      <div class="mt-8 pt-6 border-t border-[var(--border)] text-center">
        <a href="{{ routes.account_login_url }}" class="text-[var(--primary)] hover:underline font-medium">
          {{ 'customer.reset_password.back_to_login' | t }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Reset Password",
  "tag": "section",
  "class": "section-reset-password",
  "settings": []
}
{% endschema %}
